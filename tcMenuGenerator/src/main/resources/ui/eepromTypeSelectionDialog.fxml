<BorderPane prefHeight="395.0" prefWidth="504.0" styleClass="background" stylesheets="@tcmenu-extras.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thecoderscorner.menu.editorui.controller.EepromTypeSelectionController">
   <top>
      <Label prefHeight="27.0" prefWidth="534.0" text="%eeprom.type.title" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin></Label>
   </top>
   <center>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="504.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button mnemonicParsing="false" onAction="#onHelpPressed" text="%core.online.help" />
            <Button cancelButton="true" mnemonicParsing="false" onAction="#onCancelPressed" text="%core.cancel.text" />
            <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" onAction="#onCreatePressed" text="%core.choose.button" />
        </buttons>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
   <styleClass>
      <String fx:value="background" />
   </styleClass>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <RadioButton fx:id="noRomRadio" mnemonicParsing="false" selected="true" text="%eeprom.type.no.rom" GridPane.columnSpan="2">
               <toggleGroup>
                  <ToggleGroup fx:id="main" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="avrRomRadio" mnemonicParsing="false" text="%eeprom.type.avr.rom" toggleGroup="$main" GridPane.columnSpan="2" GridPane.rowIndex="1" />
            <RadioButton fx:id="eepromRadio" mnemonicParsing="false" text="%eeprom.type.eeprom.class" toggleGroup="$main" GridPane.columnSpan="2" GridPane.rowIndex="2" />
            <RadioButton fx:id="at24Radio" mnemonicParsing="false" text="%eeprom.type.at24.rom" toggleGroup="$main" GridPane.columnSpan="2" GridPane.rowIndex="3" />
            <RadioButton fx:id="bspStRadio" mnemonicParsing="false" text="%eeprom.type.bsp.stm" toggleGroup="$main" GridPane.columnSpan="2" GridPane.rowIndex="6" />
            <Label fx:id="memOffsetLabel" text="%eeprom.type.mem.offs" GridPane.rowIndex="7">
               <GridPane.margin>
                  <Insets left="15.0" />
               </GridPane.margin>
            </Label>
            <Label fx:id="i2cAddrLabel" text="%io.exp.i2c.addr" GridPane.rowIndex="4">
               <GridPane.margin>
                  <Insets left="15.0" />
               </GridPane.margin>
            </Label>
            <Label fx:id="romPageLabel" text="%eeprom.type.page.size" GridPane.rowIndex="5">
               <GridPane.margin>
                  <Insets left="15.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="i2cAddrField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField fx:id="memOffsetField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <ComboBox fx:id="romPageCombo" prefHeight="26.0" prefWidth="211.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         </children>
      </GridPane>
   </center>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
