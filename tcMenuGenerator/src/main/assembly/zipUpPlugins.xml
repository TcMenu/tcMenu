<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>InitialPlugins</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../xmlPlugins/core-display</directory>
            <outputDirectory>core-display</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../xmlPlugins/core-remote</directory>
            <outputDirectory>core-remote</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../xmlPlugins/core-themes</directory>
            <outputDirectory>core-themes</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>