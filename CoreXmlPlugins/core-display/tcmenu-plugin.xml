<?xml version="1.0" ?>
<TcMenuPluginDefinition shortName="core-display" xmlns="https://www.thecoderscorner.com/libraries/tcmenuPlugin"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="https://www.thecoderscorner.com/libraries/tcmenuPlugin https://www.thecoderscorner.com/libraries/tcmenu-plugin.xsd">
    <GeneralDetails>
        <Author name="The Coders Corner" url="http://www.thecoderscorner.com/" />
        <Version>1.6.1</Version>
        <Name>Core display and input plugin</Name>
        <Description>This plugin provides support for most basic inputs and most textual and graphical displays.</Description>
        <License name="Apache 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
    </GeneralDetails>

    <Plugins>
        <!-- df robot specific -->
        <Plugin>dfRobotJoystick.xml</Plugin>
        <Plugin>dfRobotLcd.xml</Plugin>

        <!-- display plugins -->
        <Plugin>i2cLiquidCrystalDisplay.xml</Plugin>
        <Plugin>liquidCrystalDisplay.xml</Plugin>
        <Plugin>adaArduinoSimpleBuilder.xml</Plugin>
        <Plugin>adaGfxDisplay.xml</Plugin>
        <Plugin>u8g2SimpleBuilder.xml</Plugin>
        <Plugin>u8g2Display.xml</Plugin>
        <Plugin>ssd1306asciiDisplay.xml</Plugin>

        <!-- input plugins-->
        <Plugin>rotaryEncoderInput.xml</Plugin>
        <Plugin>upDownSwitchesInput.xml</Plugin>
        <Plugin>analogJoystickInput.xml</Plugin>

        <!-- mbed specific displays -->
        <Plugin>adaMbedOled.xml</Plugin>

        <!-- custom cases -->
        <Plugin>noInput.xml</Plugin>
        <Plugin>noDisplay.xml</Plugin>
        <Plugin>customDisplay.xml</Plugin>
    </Plugins>
</TcMenuPluginDefinition>